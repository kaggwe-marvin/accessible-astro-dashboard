---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import EmpyState from "../components/EmpyState.astro";
import { Modal } from "accessible-astro-components";
---

<DefaultLayout title="Users">
  <section>
    <h1>Attendance</h1><br />
    <p class="size-20">Lorem ipsum dolor sit amet.</p>
  </section>
  <section class="margin-32">
    <div class="space-content">
      <h2>student roll-call</h2>
      <EmpyState>
        You haven't added any users yet. Start by adding some.
      </EmpyState>
      <button id="modal-trigger" class="button color-secondary"
        >Add your first user</button
      >
      <Modal
        triggerId="modal-trigger"
        title="Take attendance"
        closeText="Cancel">
        <p>
          You can use this component to include a form that adds a new roll-call
          to the list.
        </p>
      </Modal>
    </div>
  </section>
</DefaultLayout>
