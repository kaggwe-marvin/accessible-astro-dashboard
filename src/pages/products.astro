---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import EmpyState from "../components/EmpyState.astro";
import { Modal } from "accessible-astro-components";
---

<DefaultLayout title="student scores">
  <section>
    <h1>New cirilculum</h1><br />
    <p class="size-20">Lorem ipsum dolor sit amet.</p>
  </section>
  <section class="margin-32">
    <div class="space-content">
      <h2>Performance overview</h2>
      <EmpyState>
        You haven't added any scores yet. Start by adding some.
      </EmpyState>
      <button id="modal-trigger" class="button color-secondary"
        >Add your first score</button
      >
      <Modal triggerId="modal-trigger" title="Add product" closeText="Cancel">
        <p>
          You can use this component to include a form that adds a new score to
          the list.
        </p>
      </Modal>
    </div>
  </section>
</DefaultLayout>
